{
  "name": "cygwin-terminal",
  "displayName": "Cygwin Terminal",
  "description": "Open Cygwin terminal from VS Code Explorer context menu",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cygwin-terminal.openTerminal",
        "title": "Open with Cygwin"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder || resourceScheme == file",
          "command": "cygwin-terminal.openTerminal",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "Cygwin Terminal",
      "properties": {
        "cygwinTerminal.path": {
          "type": "string",
          "default": "C:\\cygwin64\\bin\\bash.exe",
          "description": "Path to Cygwin bash executable"
        },
        "cygwinTerminal.args": {
          "type": "array",
          "default": ["--login", "-i"],
          "description": "Additional arguments for Cygwin terminal"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "esbuild": "^0.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
